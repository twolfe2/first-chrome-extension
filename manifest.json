{
  "manifest_version": 2,
  "name": "Getting started",
  "description": "Shows a google image result for the page you're on",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html", 
    "default_title": "Click me!"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]

}